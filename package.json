{
  "name": "ai-elements-vue",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "dev:www": "pnpm --filter www dev",
    "build:www": "pnpm --filter www build",
    "preview:www": "pnpm --filter www preview",
    "dev:registry": "pnpm --filter registry dev",
    "build:registry": "pnpm --filter registry build",
    "prepare": "pnpm simple-git-hooks",
    "lint": "eslint . && turbo run lint",
    "lint:fix": "eslint . --fix",
    "bumpp": "bumpp package.json packages/*/package.json apps/*/package.json"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:tooling",
    "@commitlint/cli": "catalog:tooling",
    "@commitlint/config-conventional": "catalog:tooling",
    "bumpp": "catalog:tooling",
    "eslint": "catalog:tooling",
    "lint-staged": "catalog:tooling",
    "simple-git-hooks": "catalog:tooling",
    "turbo": "catalog:tooling",
    "typescript": "catalog:tooling"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
